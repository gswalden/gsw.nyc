- var seo = {};
- seo.author = 'Greg Walden';
- seo.title = seo.author + ' â€“ Full-Stack Web Developer in NYC';
- seo.description = 'The hub for @givemesnacks, including social media links and a PDF resume.';
- seo.url = 'https://www.gsw.nyc';
- seo.type = 'profile';
- seo.site = '@givemesnacks';
- seo.creator = seo.site;
- seo.image = seo.url + '/img/handsome-gentleman.jpg';
- seo.card = 'summary_large_image';

//- HTML basics
title=seo.title
meta(name='author', itemprop='name', content=seo.author)
meta(name='description', itemprop='description', content=seo.description)
link(rel='canonical', itemprop='url', href=seo.url)

//- Common Items
- each name in ['title', 'description', 'image']
  meta(property='og:' + name, content=seo[name])
  meta(name='twitter:' + name, content=seo[name])

//- Open Graph Specifics
- each name in ['url', 'type']
  meta(property='og:' + name, content=seo[name])

//- Twitter Card Specifics
- each name in ['card', 'site', 'creator']
  meta(name='twitter:' + name, content=seo[name])

//- Microdata
meta(itemprop='image', content=seo.image)
meta(itemprop='alternateName', content=seo.creator)
