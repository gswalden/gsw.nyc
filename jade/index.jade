doctype html
html(lang='en')
  include head.jade
  body
    .hero-img
    .hero
      .container
        .row
          .col-sm-8
            .intro-message
              h1 We Can#[br] Build It Better
              h3
                span.clean Clean code,
                = ' '
                span.dash dashing gentleman.
              hr.intro-divider
              ul.list-inline.intro-social-buttons
                li
                  a.btn.btn-default.btn-lg(href='https://twitter.com/givemesnacks')
                    i.icon-twitter.fa-fw
                    span.network-name Twitter
                li
                  a.btn.btn-default.btn-lg(href='https://github.com/gswalden')
                    i.icon-github-circled.fa-fw
                    span.network-name Github
                li
                  a.btn.btn-default.btn-lg(href='https://linkedin.com/in/gswalden')
                    i.icon-linkedin.fa-fw
                    span.network-name Linkedin
    #resume
      .tri.tri-left
      .tri.tri-right
      .container
        .row
          .col-xs-8.col-xs-offset-2.col-sm-6.col-sm-offset-0.col-sm-push-6.col-md-4.col-md-offset-1
            a(href='/greg-walden-resume-web.pdf')
              img.img-responsive(src='img/ipad.png', alt="Greg Walden's Resume on iPad")
          .col-sm-6.col-sm-pull-6.col-md-5.col-md-offset-1.col-md-pull-5
            hr.section-heading-spacer.hidden-xs
            .clearfix
            h2.section-heading Get In Touch
            p.resume-text.
              What's your favorite snack? Who do you read on Sunday afternoons?
              Say hello on #[a(href='https://twitter.com/intent/tweet?screen_name=givemesnacks', target='_blank') Twitter]
              and let me know! You are also welcome to peak at my
              #[a(href='/greg-walden-resume-web.pdf') resume], or send me a
              short message on #[a(href='https://linkedin.com/in/gswalden') LinkedIn].
            p.photographer Photographed by#[a(href='http://allisonryan.com') #[img.profile(src='img/alli.jpg', alt='Allison Ryan')]]
    include scripts.jade
